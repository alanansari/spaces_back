const express = require('express');

const authController = require('../controller/authController');

const router = express.Router();

router.post('/signup', authController.signup);

router.post('/signup/verify/:token',authController.sverify);

router.post('/login', authController.login);

router.post('/forgotpassword',authController.forgotpassword)

router.post('/forgotpassword/otpverify/:token',authController.sverify)

router.post('/forgotpassword/otpverify/changepassword/:token',authController.changepassword)

module.exports = router;