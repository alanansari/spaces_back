const express = require('express');

const authController = require('../controller/authController');


const router = express.Router();

router.post('/signup', authController.signup);

router.post('/signup/verify',authController.authverifytoken,authController.sverify);

router.post('/login', authController.login);

router.post('/resendotp',authController.authverifytoken,authController.forgotpassword);

router.post('/forgotpassword',authController.forgotpassword);

router.post('/forgotpassword/otpverify',authController.authverifytoken,authController.sverify);

router.post('/forgotpassword/otpverify/changepassword',authController.authverifytoken,authController.changepassword);

module.exports = router;